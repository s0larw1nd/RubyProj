<div style="margin-top: 1.3em;">
  <%= link_to "Главная", home_path, class: "web_path" %> / <%= link_to "Авторы", authors_path, class: "web_path" %> / <%= link_to "#{@author.last_name} #{@author.first_name[0]}.#{@author.patronymics[0]}.", @author, class: "web_path" %>
</div>

<div style="display:flex; margin-top: 1.5em">
  <div style='height:auto; width:15%'>
  <% if @author.photo.attached? %>
    <%= image_tag @author.photo, class: "author_port" %>
  <% else %>
    <%= image_tag "placeholder.svg", class: "author_port" %>
  <% end %>
  </div>
  <div style="margin-left:3%">
    <h3>Фамилия: <%= @author.last_name %></h3>
    <h3>Имя: <%= @author.first_name %></h3>
    <h3>Отчество: <%= @author.patronymics %></h3>
    <h3>Дата рождения: <%= @author.birthdate %></h3>
    <% if @author.deathdate != nil %>
      <h3>Дата смерти:<%= @author.deathdate %></h3>
    <% end %>
    <h3>Национальность: <%= @author.nationality %></h3>

    <%= link_to "Изменить информацию", edit_author_path(@author) %>
  </div>
</div>

<div >
  <h1>Книги автора</h1>
  <div style="display: flex; flex-wrap: wrap;">
    <% @books.each do |book| %>
      <div class="book-card">
        <%= link_to book, style: "width: fit-content" do %>
        <div>
          <% if book.cover.attached? %>
            <%= image_tag book.cover, style: "width: 200px; height: 250px" %>
          <% else %>
            <%= image_tag "book_placeholder.svg", style: "width: 200px; height: 250px" %>
          <% end %>
        </div>
        <h1 class="book-card-info"><%= book.title %></h1>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div>
  <%= button_to "Удалить автора", @author, method: :delete %>
</div>
