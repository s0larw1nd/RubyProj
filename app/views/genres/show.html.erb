<div style="margin-top: 1.3em;">
  <%= link_to "Главная", genres_path, class: "web_path" %> / <%= link_to "Жанры", genres_path, class: "web_path" %> / <%= link_to @genre.genre_name, @genre, class: "web_path" %>
</div>

<div style="display: flex; align-items: center;">
  <h1><%= @genre.genre_name %></h1>

  <%= link_to edit_genre_path(@genre), class: "btn-interact" do %>
    <%= image_tag "edit_icon.svg", class: "icon" %>
  <% end %>

  <%= button_to @genre, method: :delete, class: "btn-interact", data: { confirm: "Вы уверены?" } do %>
    <%= image_tag "thrash_icon.svg", class: "icon" %>
  <% end %>
</div>

<div style='margin-top: -1em'>
  <h2 style='color: #703030'><%= @genre.description %></h2>
<div>

<div style='margin-top: 2em'>
  <h1>Книги</h1>
  <div style="display: flex; flex-wrap: wrap;">
    <% @books.each do |book| %>
      <div class="book-card">
        <%= link_to book, style: "width: fit-content" do %>
        <div>
          <% if book.cover.attached? %>
            <%= image_tag book.cover, style: "width: 200px; height: 250px" %>
          <% else %>
            <%= image_tag "book_placeholder.svg", style: "width: 200px; height: 250px" %>
          <% end %>
        </div>
        <h1 class="book-card-info"><%= book.title %></h1>
        <% end %>
      </div>
    <% end %>
  </div>
</div>